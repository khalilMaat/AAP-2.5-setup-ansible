! /etc/keepalived/keepalived.conf
! Configuration File for keepalived

global_defs {
enable_script_security # only the root user can execute
script_user root #to make chk_haproxy script run root

}

vrrp_script chk_haproxy {
  script "/usr/bin/killall -0 haproxy" # check the haproxy process
  interval 2 # every 2 seconds
  weight 20  #  Adjust priority by 20 points
  fall 2   #  Fail after 2 consecutive errors
  rise 2   #  Recover after 2 consecutive successes
}


vrrp_instance VI_1 {
    state BACKUP
    interface eth0
    virtual_router_id 51
    priority 100
    advert_int 1
    debug 1
    authentication {
        auth_type PASS
        auth_pass 1111
    }

    unicast_src_ip {{ hostvars["gateway2.onetech.com"].ansible_facts['eth0']['ipv4']['address'] }} # The IP address of this machine
    unicast_peer {
        {{ hostvars["gateway1.onetech.com"].ansible_facts['eth0']['ipv4']['address'] }}  # The IP address of peer machines
    }

    virtual_ipaddress {
        {{ aap_vip }}/24
    }
    track_script {
        chk_haproxy
    }

}
